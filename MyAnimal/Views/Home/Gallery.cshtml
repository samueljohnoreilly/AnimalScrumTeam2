@{
    ViewData["Title"] = "Gallery";
}

<div class="text-center">
    <h1 class="display-4">Lions</h1>
</div>

<!-- Slideshow container -->
<div class="slideshow-container">
    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
        <img src="~/img/gallery/lioness-sleeping.png" class="slideshow-image" />
        <div class="text">This lion is sleeping</div>
    </div>

    <div class="mySlides fade">
        <img src="~/img/gallery/lion-perched.png" class="slideshow-image" />
        <div class="text">This lion has eerie eyes</div>
    </div>

    <div class="mySlides fade">
        <img src="~/img/gallery/lion-roar.png" class="slideshow-image" />
        <div class="text">This lion his showing us his roar</div>
    </div>

    <div class="mySlides fade">
        <img src="~/img/gallery/lion-walking.png" class="slideshow-image" />
        <div class="text">This lion is walking with pride</div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
    <span class="dot" onclick="currentSlide(4)"></span>
</div>